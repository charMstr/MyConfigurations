# to be addapted for home...
function see
{
	# echo  ''
	for i in `seq 3 0`
	do
		echo "\e[1A\e[38;5;10m$i\e[m"
		sleep 0.5
	done
	echo "  ===>  $1 "
	sleep 0.5
	printf "\e[2A\e[38;5;195m%s\n\t\t\t\t\t--------\n\e[m" "$(cat ~/Projects/libft/libft_git/ft_$1.c)";
}

