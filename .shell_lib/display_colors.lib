display_colors()
{
    NUM=0
    _RESET_COLOR="\033[m"

    #DISPLAY THE FIRST 16 COLORS
    echo "\n\tfirst 16 colors [0:15]"
    while [ $NUM -lt "16" ]
    do
	    echo  "\033[38;5;${NUM}m❤︎ ${_RESET_COLOR}\c"
	    NUM=`expr $NUM + 1`
    done


    #DISPPLAY THE REMAINING COLORS UNTIL VALUE 255
    echo "\n\n\tother colors [16:255]\n"
    OFFSET=1
    while [ ${NUM} -le "256" ]
    do
	    if [ `expr ${OFFSET} % 6` -eq "1" ] && [ ${OFFSET} -gt "1" ]
	    then
		    INDEX=6
		    while [ $INDEX -gt "0" ]
		    do
			    echo " [`expr ${NUM} - ${INDEX}`] \c"
			    INDEX=`expr ${INDEX} - 1`
		    done
		    echo ""
	    fi
	    if [ $NUM != 256 ]
	    then
		echo  "\033[38;5;${NUM}m❤︎ ${_RESET_COLOR}\c"
	    fi
	    NUM=`expr $NUM + 1`
	    OFFSET=`expr $OFFSET + 1`
    done
}
