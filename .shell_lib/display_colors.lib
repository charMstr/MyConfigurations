#THIS FUNCTION WILL DISPLAY THE PANEL OF COLORS

colors_displayer()
{
    NUM=0

    #DISPLAY THE FIRST 16 COLORS
    echo "\n\tfirst 16 colors [0:15]\n"
    while [ $NUM -lt "16" ]
    do
	    echo  "\033[48;5;${NUM}m\033[38;5;0m ${NUM} \033[m\c"
	    NUM=`expr $NUM + 1`
    done


    #DISPPLAY THE REMAINING COLORS UNTIL VALUE 255
    echo "\033[m\n\n\tother colors [16:255]\n"
    OFFSET=1
    while [ ${NUM} -lt "256" ]
    do
	    if [ `expr ${OFFSET} % 6` -eq "1" ] && [ ${OFFSET} -gt "1" ]
	    then
		    echo ""
	    fi
	    echo  "\033[48;5;${NUM}m\033[38;5;0m ${NUM} \033[m\c"
	    NUM=`expr $NUM + 1`
	    OFFSET=`expr $OFFSET + 1`
    done
    echo ""
}
